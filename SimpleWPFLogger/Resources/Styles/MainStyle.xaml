<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
    </Style>

    <Style x:Key="MainTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="LineHeight" Value="15"></Setter>
    </Style>

    <Style x:Key="MainScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"></Setter>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"></Setter>
    </Style>

</ResourceDictionary>